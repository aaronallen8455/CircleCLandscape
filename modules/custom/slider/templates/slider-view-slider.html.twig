{#
/**
 * @file
 * Default theme implementation to display a jssor slider.
 *
 * Available variables:
 * - title: The title of this group of rows. May be empty.
 * - rows: A list of the view's row items.
 *   - attributes: The row's HTML attributes.
 *   - content: The row's content.
 * - view: The view object.
 * - default_row_class: A flag indicating whether default classes should be
 *   used on rows.
 * - options: view style options
 *
 * @see template_preprocess_slider_view_slider()
 *
 * @ingroup themeable
 */
#}

{% if title %}
    <h3>{{ title }}</h3>
{% endif %}
<div id="jssor_1" style="position:relative;margin:0 auto;top:0px;left:0px;width:{{ options.width }}px;height:{{ options.height }}px;overflow:hidden;visibility:hidden;">
    <!-- Loading Screen -->
    <div data-u="loading" style="position:absolute;top:0px;left:0px;background-color:rgba(0,0,0,0.7);">
        <div style="filter: alpha(opacity=70); opacity: 0.7; position: absolute; display: block; top: 0px; left: 0px; width: 100%; height: 100%;"></div>
        <div style="position:absolute;display:block;background:url('/libraries/jssor/img/loading.gif') no-repeat center center;top:0px;left:0px;width:100%;height:100%;"></div>
    </div>
    <div data-u="slides" style="cursor:default;position:relative;top:0px;left:0px;width:998px;height:439px;overflow:hidden;">
        {% for row in rows %}
            {%
            set row_classes = [
            default_row_class ? 'views-row',
            ]
            %}
            <div{{ row.attributes.addClass(row_classes) }}>
                {{ row.content }}
            </div>
        {% endfor %}
        <a data-u="any" href="https://www.jssor.com/aallen/test.slider" style="display:none">slideshow html</a>
    </div>
    <!-- Bullet Navigator -->
    <div data-u="navigator" class="jssorb05" style="bottom:16px;right:16px;" data-autocenter="1">
        <!-- bullet navigator item prototype -->
        <div data-u="prototype" style="width:16px;height:16px;"></div>
    </div>
    <!-- Arrow Navigator -->
    <span data-u="arrowleft" class="jssora03l" style="top:0px;left:8px;width:55px;height:55px;" data-autocenter="2"></span>
    <span data-u="arrowright" class="jssora03r" style="top:0px;right:8px;width:55px;height:55px;" data-autocenter="2"></span>
</div>