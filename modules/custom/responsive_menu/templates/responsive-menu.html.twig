{#
/**
 * @file
 * Default theme implementation to format images for jssor.
 *
 * Available variables:
 *     - menu_items
 *
 * @ingroup themeable
 */
#}

<div class="responsive-navigation">
    <h1 class="nav-mobile-title">Menu</h1>
    <ul class="navigation-links">
        {% for title,link_path in menu_items %}
            <li class="nav item">
                <a {% if path('<current>') == link_path %}class="current-path"{% endif %} href="{{ link_path }}">{{ title }}</a>
            </li>
        {% endfor %}
    </ul>
</div>

